  "totalLessons": 65,
  "level": "A1",
  "description": "Standard grammar progression for A1 level. W-Fragen comes AFTER accusative case.",
  "progression": [
    {
      "lessonRange": [1, 6],
      "focus": "vocabulary-only",
      "topics": ["greetings", "numbers", "basic-phrases"],
      "grammar": [],
      "note": "No formal grammar - pure vocabulary acquisition"
    },
    {
      "lessonRange": [7, 8],
      "focus": "formality",
      "topics": ["formality"],
      "grammar": [
        {
          "id": "du-vs-sie",
          "de": "du vs. Sie",
          "fa": "تو در مقابل شما",
          "description": "Informal vs formal address",
          "prerequisites": []
        }
      ]
    },
    {
      "lessonRange": [9, 10],
      "focus": "sentence-structure",
      "topics": ["word-order"],
      "grammar": [
        {
          "id": "basic-sentence-structure",
          "de": "Grundlegende Satzstruktur",
          "fa": "ساختار پایه جمله",
          "description": "Subject-Verb-Object basics, V2 rule introduction",
          "prerequisites": []
        }
      ]
    },
    {
      "lessonRange": [11, 15],
      "focus": "verbs-pronouns",
      "topics": ["pronouns", "verb-conjugation"],
      "grammar": [
        {
          "id": "personal-pronouns-nominative",
          "de": "Personalpronomen (Nominativ)",
          "fa": "ضمایر شخصی (فاعلی)",
          "description": "ich, du, er, sie, es, wir, ihr, sie, Sie",
          "prerequisites": ["du-vs-sie"]
        },
        {
          "id": "verb-sein",
          "de": "sein (Konjugation)",
          "fa": "فعل بودن",
          "description": "bin, bist, ist, sind, seid, sind",
          "prerequisites": ["personal-pronouns-nominative"]
        },
        {
          "id": "verb-haben",
          "de": "haben (Konjugation)",
          "fa": "فعل داشتن",
          "description": "habe, hast, hat, haben, habt, haben",
          "prerequisites": ["personal-pronouns-nominative"]
        },
        {
          "id": "regular-verb-conjugation",
          "de": "Regelmäßige Verben",
          "fa": "صرف فعل‌های باقاعده",
          "description": "-e, -st, -t, -en, -t, -en endings",
          "prerequisites": ["personal-pronouns-nominative"]
        },
        {
          "id": "irregular-verb-conjugation",
          "de": "Unregelmäßige Verben",
          "fa": "صرف فعل‌های بی‌قاعده",
          "description": "Stem-changing verbs (fahren, sprechen, etc.)",
          "prerequisites": ["regular-verb-conjugation"]
        }
      ]
    },
    {
      "lessonRange": [16, 18],
      "focus": "negation",
      "topics": ["negation"],
      "grammar": [
        {
          "id": "negation-nicht",
          "de": "Verneinung mit nicht",
          "fa": "منفی کردن با nicht",
          "description": "Negating verbs and adjectives",
          "prerequisites": ["basic-sentence-structure"]
        },
        {
          "id": "negation-kein",
          "de": "Verneinung mit kein",
          "fa": "منفی کردن با kein",
          "description": "Negating nouns (kein/keine)",
          "prerequisites": ["negation-nicht"]
        }
      ]
    },
    {
      "lessonRange": [19, 21],
      "focus": "articles",
      "topics": ["definite-articles", "indefinite-articles", "gender"],
      "grammar": [
        {
          "id": "definite-articles-nominative",
          "de": "Bestimmte Artikel (Nominativ)",
          "fa": "حروف تعریف معین (فاعلی)",
          "description": "der, die, das - grammatical gender",
          "prerequisites": []
        },
        {
          "id": "indefinite-articles-nominative",
          "de": "Unbestimmte Artikel (Nominativ)",
          "fa": "حروف تعریف نامعین (فاعلی)",
          "description": "ein, eine - indefinite articles",
          "prerequisites": ["definite-articles-nominative"]
        },
        {
          "id": "noun-gender",
          "de": "Genus (Geschlecht)",
          "fa": "جنسیت اسم",
          "description": "Masculine, feminine, neuter nouns",
          "prerequisites": ["definite-articles-nominative"]
        }
      ]
    },
    {
      "lessonRange": [22, 23],
      "focus": "plural",
      "topics": ["plural-nouns"],
      "grammar": [
        {
          "id": "plural-formation",
          "de": "Pluralbildung",
          "fa": "جمع بستن",
          "description": "5 plural patterns: -e, -n/-en, -er, -s, no change",
          "prerequisites": ["noun-gender"]
        }
      ]
    },
    {
      "lessonRange": [24, 25],
      "focus": "possessives",
      "topics": ["possessive-pronouns"],
      "grammar": [
        {
          "id": "possessive-pronouns-nominative",
          "de": "Possessivpronomen (Nominativ)",
          "fa": "ضمایر ملکی (فاعلی)",
          "description": "mein, dein, sein, ihr, unser, euer, ihr, Ihr",
          "prerequisites": ["personal-pronouns-nominative", "indefinite-articles-nominative"]
        }
      ]
    },
    {
      "lessonRange": [26, 28],
      "focus": "accusative-case",
      "topics": ["accusative"],
      "grammar": [
        {
          "id": "accusative-articles",
          "de": "Akkusativ (Artikel)",
          "fa": "حالت مفعولی (حروف تعریف)",
