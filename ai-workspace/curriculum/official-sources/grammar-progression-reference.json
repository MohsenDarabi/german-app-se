        {
          "id": "accusative-pronouns",
          "de": "Akkusativ (Pronomen)",
          "fa": "حالت مفعولی (ضمایر)",
          "description": "mich, dich, ihn, sie, es, uns, euch, sie, Sie",
          "prerequisites": ["accusative-articles", "personal-pronouns-nominative"]
        },
        {
          "id": "accusative-verbs",
          "de": "Verben mit Akkusativ",
          "fa": "فعل‌های با مفعول مستقیم",
          "description": "haben, brauchen, möchten, sehen, etc.",
          "prerequisites": ["accusative-articles"]
        }
      ]
    },
    {
      "lessonRange": [29, 31],
      "focus": "w-fragen",
      "topics": ["question-words", "word-order-questions"],
      "grammar": [
        {
          "id": "yes-no-questions",
          "de": "Ja/Nein-Fragen",
          "fa": "سوالات بله/خیر",
          "description": "Verb-first questions: Sprichst du Deutsch?",
          "prerequisites": ["basic-sentence-structure"]
        },
        {
          "id": "w-fragen",
          "de": "W-Fragen",
          "fa": "سوالات با کلمات پرسشی",
          "description": "Was, Wo, Wer, Wie, Wann, Warum, Woher, Wohin",
          "prerequisites": ["accusative-case", "yes-no-questions"],
          "note": "CRITICAL: Only introduce AFTER accusative case is taught"
        }
      ]
    },
    {
      "lessonRange": [32, 36],
      "focus": "dative-case",
      "topics": ["dative"],
      "grammar": [
        {
          "id": "dative-articles",
          "de": "Dativ (Artikel)",
          "fa": "حالت مفعول غیرمستقیم (حروف تعریف)",
          "description": "dem, der, dem; einem, einer, einem",
          "prerequisites": ["accusative-articles"]
        },
        {
          "id": "dative-pronouns",
          "de": "Dativ (Pronomen)",
          "fa": "حالت مفعول غیرمستقیم (ضمایر)",
          "description": "mir, dir, ihm, ihr, ihm, uns, euch, ihnen, Ihnen",
          "prerequisites": ["dative-articles", "accusative-pronouns"]
        },
        {
          "id": "dative-verbs",
          "de": "Verben mit Dativ",
          "fa": "فعل‌های با مفعول غیرمستقیم",
          "description": "helfen, gefallen, gehören, danken, etc.",
          "prerequisites": ["dative-articles"]
        },
        {
          "id": "dative-prepositions",
          "de": "Präpositionen mit Dativ",
          "fa": "حروف اضافه با حالت Dativ",
          "description": "aus, bei, mit, nach, seit, von, zu",
          "prerequisites": ["dative-articles"]
        }
      ]
    },
    {
      "lessonRange": [37, 40],
      "focus": "separable-verbs",
      "topics": ["separable-verbs", "word-order"],
      "grammar": [
        {
          "id": "separable-verbs",
          "de": "Trennbare Verben",
          "fa": "فعل‌های جداشدنی",
          "description": "aufstehen, ankommen, einkaufen - prefix goes to end",
          "prerequisites": ["basic-sentence-structure", "regular-verb-conjugation"]
        },
        {
          "id": "inseparable-verbs",
          "de": "Untrennbare Verben",
          "fa": "فعل‌های جدانشدنی",
          "description": "be-, ge-, er-, ver-, ent-, emp-, miss-, zer-",
          "prerequisites": ["separable-verbs"]
        }
      ]
    },
    {
      "lessonRange": [41, 43],
      "focus": "modal-verbs",
      "topics": ["modal-verbs"],
      "grammar": [
        {
          "id": "modal-verbs",
          "de": "Modalverben",
          "fa": "فعل‌های وجهی",
          "description": "können, müssen, wollen, dürfen, sollen, mögen",
          "prerequisites": ["basic-sentence-structure", "irregular-verb-conjugation"]
        },
        {
          "id": "modal-verb-word-order",
          "de": "Wortstellung mit Modalverben",
          "fa": "ترتیب کلمات با فعل‌های وجهی",
          "description": "Modal verb conjugated, main verb at end (infinitive)",
          "prerequisites": ["modal-verbs"]
        }
      ]
    },
    {
      "lessonRange": [44, 50],
      "focus": "past-tense",
      "topics": ["perfekt", "past-participle"],
      "grammar": [
        {
          "id": "perfekt-haben",
          "de": "Perfekt mit haben",
          "fa": "زمان گذشته با haben",
          "description": "Ich habe gemacht - most verbs",
          "prerequisites": ["verb-haben", "regular-verb-conjugation"]
        },
        {
          "id": "perfekt-sein",
          "de": "Perfekt mit sein",
          "fa": "زمان گذشته با sein",
          "description": "Ich bin gegangen - movement/change verbs",
          "prerequisites": ["verb-sein", "perfekt-haben"]
        },
        {
          "id": "past-participle-regular",
          "de": "Partizip II (regelmäßig)",
          "fa": "اسم مفعول (باقاعده)",
          "description": "ge-...-t pattern: gemacht, gekauft",
          "prerequisites": ["perfekt-haben"]
        },
        {
          "id": "past-participle-irregular",
          "de": "Partizip II (unregelmäßig)",
          "fa": "اسم مفعول (بی‌قاعده)",
          "description": "ge-...-en pattern: gegangen, geschrieben",
          "prerequisites": ["past-participle-regular"]
        }
      ]
    },
    {
      "lessonRange": [51, 55],
      "focus": "prepositions",
      "topics": ["prepositions", "two-way-prepositions"],
      "grammar": [
        {
          "id": "accusative-prepositions",
          "de": "Präpositionen mit Akkusativ",
          "fa": "حروف اضافه با حالت Akkusativ",
          "description": "durch, für, gegen, ohne, um",
          "prerequisites": ["accusative-articles"]
        },
        {
          "id": "two-way-prepositions",
          "de": "Wechselpräpositionen",
          "fa": "حروف اضافه دوگانه",
          "description": "an, auf, hinter, in, neben, über, unter, vor, zwischen",
          "prerequisites": ["accusative-prepositions", "dative-prepositions"],
          "note": "Wohin? → Accusative, Wo? → Dative"
        }
      ]
    },
    {
      "lessonRange": [56, 60],
      "focus": "conjunctions",
      "topics": ["conjunctions", "subordinate-clauses"],
      "grammar": [
        {
          "id": "coordinating-conjunctions",
          "de": "Koordinierende Konjunktionen",
          "fa": "حروف ربط همپایه",
          "description": "und, oder, aber, denn, sondern",
          "prerequisites": ["basic-sentence-structure"]
        },
        {
          "id": "subordinating-conjunctions",
          "de": "Subordinierende Konjunktionen",
          "fa": "حروف ربط ناهمپایه",
          "description": "weil, dass, wenn, obwohl - verb goes to end",
          "prerequisites": ["coordinating-conjunctions"]
        }
      ]
    },
    {
      "lessonRange": [61, 65],
      "focus": "practical-communication",
      "topics": ["review", "practical-situations"],
      "grammar": [],
      "note": "Review and practical application of all grammar"
    }
  ],
