          "personality": ["calm", "confident", "trustworthy", "patient", "professional"],
          "pronouns": { "nominative": "er", "accusative": "ihn", "dative": "ihm" },
          "persianSpelling": "تام",
          "assetPath": "content/characters/tom/"
        }
      },
      "introducedAt": "A1-M01-L01",
