    "persian": {
      "names": ["Sara", "Amir"],
      "description": "Persian-speaking characters for cultural bridge moments and relatable learner perspective.",
      "traits": {
        "Sara": {
          "gender": "female",
          "age": "young adult",
          "role": "Persian speaker learning German, relatable learner perspective",
          "pronouns": { "nominative": "sie", "accusative": "sie", "dative": "ihr" },
          "nativeLanguage": "Persian (Farsi)",
          "persianSpelling": "سارا",
          "assetPath": null
        },
        "Amir": {
          "gender": "male",
          "age": "young adult",
          "role": "Persian speaker living in Germany, cultural bridge",
          "pronouns": { "nominative": "er", "accusative": "ihn", "dative": "ihm" },
          "nativeLanguage": "Persian (Farsi)",
          "persianSpelling": "امیر",
          "assetPath": null
        }
      },
      "introducedAt": "A1-M03 (cultural context lessons)",
      "usageRule": "Use for Persian cultural perspective or when showing learner struggles"
    },
    "service": {
      "names": ["Kellner", "Verkäufer", "Arzt"],
      "description": "Generic role names for service scenarios (not named characters).",
      "usageRule": "Use role titles instead of names for brief service interactions",
      "examples": [
        "der Kellner (the waiter)",
        "die Verkäuferin (the saleswoman)",
        "der Arzt / die Ärztin (the doctor)"
      ]
    }
  },
  "rules": {
    "cognitiveLoad": {
      "maxCharactersPerScene": 4,
      "maxNewCharactersPerLesson": 2,
      "preferFamiliarCharacters": true
    },
    "consistency": {
      "sameNameSamePerson": true,
      "maintainTraitsAcrossLessons": true,
      "noConflictingBackstories": true
    },
    "selection": {
      "twoPersonScene": "Use Eli & Tom",
      "threePersonScene": "Use Eli, Tom + one from secondary",
      "fourPersonScene": "Use Eli, Tom + two from secondary",
      "youthScene": "Use Lisa and/or Alex for casual youth scenarios",
      "persianPerspective": "Use Sara or Amir when showing learner experience",
      "serviceInteraction": "Use role titles (Kellner, etc.) instead of names"
    }
  },
  "levelGuidelines": {
    "A1": {
      "allowedPrimary": ["Eli", "Tom"],
      "allowedSecondary": ["Lisa", "Alex"],
      "allowedPersian": ["Sara"],
      "note": "Keep character count minimal for beginners"
    },
    "A2": {
      "allowedPrimary": ["Eli", "Tom"],
      "allowedSecondary": ["Lisa", "Alex", "Max", "Sophie", "Leon", "Emma"],
      "allowedPersian": ["Sara", "Amir"],
      "note": "Can introduce more complex multi-person scenarios"
    },
    "B1": {
      "allowedAll": true,
      "note": "Full character roster available, learners can handle complexity"
    }
  },
  "validationRules": [
    {
      "rule": "unknown-character",
      "description": "Fail if character name not in registry",
      "severity": "error"
    },
    {
      "rule": "too-many-characters",
      "description": "Warn if more than 4 characters in a scene",
      "severity": "warning"
    },
    {
      "rule": "premature-secondary",
      "description": "Warn if secondary character used before A1-M02",
      "severity": "warning"
    },
    {
      "rule": "unnecessary-expansion",
      "description": "Warn if 3+ characters used when 2 would suffice",
      "severity": "info"
    }
  ],
  "migrationNotes": {
    "v1-to-v2": {
      "date": "2026-01-06",
      "changes": [
        "Primary characters changed: Lisa/Theo → Eli/Tom",
        "Lisa moved to secondary (young companion role)",
        "Alex added as secondary character",
        "Theo removed (replaced by Tom)",
        "Added assetPath references to characters with visual definitions",
        "Added persianSpelling for all characters",
        "Added personality traits for characters with full definitions"
      ],
      "contentImpact": [
        "Existing lessons using 'Theo' need update to 'Tom'",
        "Audio regeneration needed for renamed characters"
      ]
    }
  }
}
